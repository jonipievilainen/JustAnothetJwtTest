<?xml version="1.0" encoding="utf-8" ?>
<log4net debug="true">
  <!-- Appender for audit.log -->
  <appender name="AuditFileAppender" type="log4net.Appender.FileAppender">
    <file value="C:\Test\audit.log" />
    <appendToFile value="true" />
    <layout type="log4net.Layout.PatternLayout">
      <conversionPattern value="%date [%thread] %-5level %logger - %message%newline" />
    </layout>
  </appender>

  <!-- Logger for audit log -->
  <logger name="AuditLogger">
    <level value="ALL" />
    <appender-ref ref="AuditFileAppender" />
  </logger>

  <!-- Appender for application log -->
  <appender name="ApplicationFileAppender" type="log4net.Appender.FileAppender">
    <file value="C:\Test\application.log" />
    <appendToFile value="true" />
    <layout type="log4net.Layout.PatternLayout">
      <conversionPattern value="%date [%thread] %-5level %logger - %message%newline" />
    </layout>
  </appender>

  <!-- Logger for application log -->
  <logger name="ApplicationLogger">
    <level value="ALL" />
    <appender-ref ref="ApplicationFileAppender" />
  </logger>

  <appender name="ConsoleAppender" type="YourNamespace.ConsoleAppenderToLog4Net, YourAssemblyName">
    <layout type="log4net.Layout.PatternLayout">
      <conversionPattern value="%date [%thread] %-5level %logger - %message%newline" />
    </layout>
  </appender>

  <appender name="RollingFileAppender" type="log4net.Appender.RollingFileAppender">
    <file value="C:\Test\Log.txt" />
    <appendToFile value="false" />
    <rollingStyle value="Size" />
    <maxSizeRollBackups value="10" />
    <maximumFileSize value="50MB" />
    <staticLogFileName value="true" />
    <layout type="log4net.Layout.PatternLayout">
      <conversionPattern value="%date %-5level[%logger]: %message%newline" />
    </layout>
  </appender>

  <root>
    <level value="ALL" />
    <appender-ref ref="ApplicationFileAppender" />
    <appender-ref ref="RollingFileAppender" />
  </root>
</log4net>
